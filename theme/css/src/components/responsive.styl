/*************************************************************
 * Generic classes and rules
 ************************************************************/
.wrapper {
    max-width:820px;
}

@media screen and (max-width: 640px) {
    .wrapper {
        width 90%
    }
}

@media screen and (max-width: 420px) {
    body {
        font-size 14px
    }
}

/*************************************************************
 * Hero Navigation (Appears at the top of every page)
 ************************************************************/
@media screen and (max-width:640px) {
    .hero-navigation {
        background:none;
        margin-bottom:2em;
    }

    .hero-navigation .hero-nav-wrap {
        border-bottom:3px solid #302e2b;
        margin:0 auto;
    }

    .hero-navigation .logo-wrap {
        float:none;
        text-align:center;
    }
}

/*************************************************************
 * Article - General Elements
 ************************************************************/
@media screen and (min-width:1150px) {
    .article {
        max-width:1150px;
        margin:0 auto;
    }

    .article h1,
    .article h2,
    .article h3,
    .article h4,
    .article h5,
    .article h6,
    .article p,
    .article ul,
    .article blockquote,
    .article ol {
        max-width:820px;
    }

    .article .highlight:hover {
        border-radius:3px;
    }
}
@media screen and (max-width:768px) {
    .article h1,
    .article h2,
    .article h3,
    .article h4,
    .article h5,
    .article h6,
    .article p,
    .article ul,
    .article blockquote,
    .article .title,
    .article ol {
        width:80%;
        margin-left:auto;
        margin-right:auto;
        float:none;
    }

    .article .highlight {
        width 100%
        margin:0 auto 1em auto;
        float:none;
        border-radius 0
    }
    .article .highlight:hover {
        margin:0 auto 1em auto;
    }

    .article blockquote > * {
        width:100%;
    }
}

/*************************************************************
 * Article - Code Blocks
 ************************************************************/
@media screen and (max-width: 420px) {
    .article .highlight {
        font-size .750em
    }
}


/*************************************************************
 * Article - h1
 ************************************************************/
@media screen and (max-width:1000px) {
    .article .title {
        font-size:6em;
    }
}
@media screen and (max-width:768px) {
    .article .title {
        font-size:5em;
    }
}
@media screen and (max-width:640px) {
    .article .title {
        font-size:3.5em;
    }
}
@media screen and (max-width:420px) {
    .article .title {
        font-size:2.5em;
    }
}


/*************************************************************
 * Article iFrames
 *
 * iFrames are sized at 800px by default
 ************************************************************/
@media screen and (max-width:1045px) {
    .article .full-width iframe {
        float:none;
        margin:0 auto;
        width:100%;
        height:400px;
    }
}
