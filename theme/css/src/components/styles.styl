/*************************************************************
 * Typography
 ************************************************************/
body {
    font:16px/1.6 "ars-maquette-web", Helvetica, Arial, Sans-serif;
    color:#302e2b;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin:.5em 0;
}


p {
    margin:0 0 1em 0;
}

a {
    color:#302e2b;
    background:#fcd70b;
    padding:0 5px;
    border-top:2px solid #fcd70b;
    border-bottom:2px solid #fcd70b;
}

a:hover {
    text-decoration:none;
    background:#fce356;
    border-top:2px solid #fce356;
    border-bottom:2px solid #fce356;
}

/*************************************************************
 * Generic classes and rules
 ************************************************************/
* {
    -moz-box-sizing:border-box;
    box-sizing:border-box;
}

.wrapper {
    width:55%;
    margin:0 auto;
}

/**
 * For modern browsers
 * 1. The space content is one way to avoid an Opera bug when the
 *    contenteditable attribute is included anywhere else in the document.
 *    Otherwise it causes space to appear at the top and bottom of elements
 *    that are clearfixed.
 * 2. The use of `table` rather than `block` is only necessary if using
 *    `:before` to contain the top-margins of child elements.
 */
.cf:before,
.cf:after {
    content: " "; /* 1 */
    display: table; /* 2 */
}

.cf:after {
    clear: both;
}

/*************************************************************
 * Hero Navigation (Appears at the top of every page)
 ************************************************************/
.hero-navigation {
    overflow:hidden;
    z-index:2;
}

.hero-navigation .hero-nav-wrap {
    width:100%;
    max-width:1150px;
    margin:0 auto 30px auto;
    border-bottom:5px solid #302e2b;
    position:relative;
}

.hero-navigation .hero-nav-wrap:after {
    position:absolute;
    content:'';
    border-bottom:5px solid #fff;
    height:100%;
    width:10px;
    right:12.5%;
    top:0;
}

.hero-navigation .logo-wrap {
    float:left;
}

.hero-navigation .logo-link {
    padding:10px;
}

.hero-navigation .logo-link:hover {
    background:#131212;
    border-radius:0;
}

.hero-navigation .logo-link img {
    width:50px;
}

.hero-navigation ul {
    list-style:none;
    padding:0;
    margin:0 auto;
    display:flex;
    align-items:center;
}

.hero-navigation li {
    float:left;
    margin-right:40px;
}

.hero-navigation a {
    background:none;
    padding:13px 22px;
    display:block;
    color:#302e2b;
    text-decoration:none;
    font-weight:bold;
    font-size:1.250em;
    border:none;
}

.hero-navigation a:hover {
    background:#fcd70b;
    border-radius:3px;
    border:none;
}

/*************************************************************
 * Hero Footer (Appears at the bottom of every page)
 ************************************************************/
.hero-footer {
    margin:30px 0;
    clear:both;
}
.hero-footer-wrap {
    width:100%;
    max-width:1150px;
    padding:20px;
    margin:0 auto;
    border-top:5px solid #302e2b;
    text-align:right;
    position:relative;
}

/*************************************************************
 * Article - General Gubbins
 ************************************************************/
.article {
    width:100%;
    margin:0 auto;
}

.constrain,
.article h1,
.article h2,
.article h3,
.article h4,
.article h5,
.article h6,
.article p,
.article time,
.article ul,
.article video,
.article ol {
    width:55%;
    margin-right:12.5%;
    padding:0;
    float:right;
    clear:both;
}

.article p > img {
    max-width:100%;
}

/*************************************************************
 * Article - List Treatments
 ************************************************************/
.article ul,
.article ol {
    list-style-position:outside;
    padding-left:0;
}

/*************************************************************
 * Article - Code Blocks
 ************************************************************/
.article .highlight {
    width:55%;
    margin:0 12.5% 1em 0;
    clear:both;
    float:right;
    background:#302e2b;
    color:#fff;
    padding:10px 20px;
    border-radius:3px;
    transition:all .3s;
}
.article .highlight:hover {
    width:100%;
    border-radius:0;
    margin:0 0 1em 0;
}

/*************************************************************
 * Article - Summary Block
 ************************************************************/
.article .title {
    font-size:7em;
    font-weight:200;
    font-style:italic;
    text-transform:uppercase;
    line-height:1.2;
    float:right;
    border-bottom:10px solid #fcd70b;
    width:75%;
    margin:0 12.5% 20px 0;
    padding-bottom:0.089em;
}

.article .summary {
    font-size:1.125em;
    font-weight:500;
}

/*************************************************************
 * Article - Quotes
 ************************************************************/
.article blockquote {
    margin:0;
    border-left:4px solid #fcd70b;
    clear:both;
    float:right;
    padding-left:20px;
    width:55%;
    margin-right:12.5%;
    margin-bottom:20px;
    position:relative;
}
.article blockquote:before {
    content:'\201c';
    font-size:4em;
    font-weight:900;
    position:absolute;
    left:-.8em;
    top:50%;
    margin-top:-.7em;
    color:#c9c5c5;
}
.article blockquote > * {
    margin:0;
    float:none;
    clear:both;
    width:auto;
}

.article blockquote ul {
    list-style:none;
}

.article blockquote li {
    margin-bottom:5px;
    padding:3px 10px;
    font-size:14px;
}

.article blockquote li:nth-child(odd) {
    background:#EBEBEB;
}

.article blockquote li > * {
    width:100%;
    margin:0;
    float:none;
}




/*************************************************************
 * Article - Full Width Elements
 ************************************************************/
.article .full-width {
    margin:0 0 1em 0;
    padding:0;
    position:relative;
    overflow:hidden;
    clear:both;
}

.article .full-width figcaption {
    background:#fce356;
    position:absolute;
    right:7%;
    bottom:10%;
    padding:15px;
    max-width:250px;
    color:#302e2b;
    font-size:0.875em;
    line-height:1.8;
}

.article .full-width iframe {
    display:block;
    float:right;
    margin:0 12.5% 0 0;
}

/*************************************************************
 * Article Listing
 ************************************************************/
.article-listing {
    list-style:none;
    padding:0;
    margin:0;
}

.article-listing .article-title {
    font-size:4em;
    font-weight:200;
    font-style:italic;
    text-transform:uppercase;
    line-height:1.2;
    float:right;
    width:75%;
}

.article-listing time {
    font-weight:bold;
}

.article-listing .article-title a {
    text-decoration:none;
}

.article-listing .article-title a:hover {
    text-decoration:underline;
}

/*************************************************************
 * Article Listing - Featured Article
 ************************************************************/
.article-listing .featured-article-wrap {
    background:#ade0b9;
    padding-bottom:300px;
}

.article-listing .featured-article-wrap:before {
    content:'';
    display:block;
    position:absolute;
    top:0;
    height:300px;
    width:100%;
    z-index:-1;
    background:#ade0b9;
}

.article-listing .featured-article {
    width:100%;
    max-width:1150px;
    margin:0 auto 30px auto;
    position:relative;
}

.article-listing .featured-article .article-title {
    font-weight:900;
    float:none;
    width:auto;
}

.article-listing .featured-article .article-title a {
    background:none;
    color:#ffffff;
    border:none;
}

/*************************************************************
 * Javascript Disabled Message (Appears below hero nav)
 ************************************************************/
.javascript-disabled {
    background:#39de96;
    padding:1em 0;
}

/*************************************************************
 * Fast-track styles
 ************************************************************/
.log {
    margin:2.5% 0 0 5%;
}
